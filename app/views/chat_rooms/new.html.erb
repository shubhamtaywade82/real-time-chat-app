<h1>Create New Chat Room</h1>

<%= form_with(model: @chat_room, remote: true, class: 'd-flex') do |form| %>
  <div>
    <%= form.text_field :name, class: "form-control", placeholder: "Room name", autocomplete: 'off' %>
  </div>

  <div class="form-check">
    <%= form.label :privacy, style: "display: block" %>
    <%= form.check_box :privacy, { class: "form-check-label" }%>
  </div>

  <div>
    <%= form.submit data: { disable_with: false } %>
  </div>
<% end %>

<%= link_to 'Back to Chat Rooms', chat_rooms_path %>