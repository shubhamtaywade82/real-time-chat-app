<div class="form-group msg-form">
  <%= form_with(model: [@chat_room ,@message], remote: true, class: "d-flex",
     data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.hidden_field :chat_room_id %>
    <%= f.text_field :content, id: 'chat-text', class: "form-control msg-content", autocomplete: 'off', placeholder: "Type your message here........." %>
    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>
</div>